<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default-persistence" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>dev.dubrovsky.model.analytics.Analytics</class>
    <class>dev.dubrovsky.model.bonus.Bonus</class>
    <class>dev.dubrovsky.model.bonus.UserBonus</class>
    <class>dev.dubrovsky.model.cart.Cart</class>
    <class>dev.dubrovsky.model.cart.CartItem</class>
    <class>dev.dubrovsky.model.category.Category</class>
    <class>dev.dubrovsky.model.loyalty_program.LoyaltyProgram</class>
    <class>dev.dubrovsky.model.loyalty_program.UserLoyaltyProgram</class>
    <class>dev.dubrovsky.model.order.Order</class>
    <class>dev.dubrovsky.model.order.OrderItem</class>
    <class>dev.dubrovsky.model.payment_method.PaymentMethod</class>
    <class>dev.dubrovsky.model.product.Product</class>
    <class>dev.dubrovsky.model.user.User</class>

    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/online_store_db"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="postgres"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
    </properties>
  </persistence-unit>
</persistence>
